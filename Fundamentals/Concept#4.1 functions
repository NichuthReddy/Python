def extract():
    for i in range(1, 100):  # simulate streaming source
        yield i

def transform(data):
    for i in data:
        if i % 2 == 0:
            yield i * 10

def load(data):
    for record in data:
        print(f"Loaded: {record}")

# Simulate ETL
data = extract()
transformed = transform(data)
load(transformed)

